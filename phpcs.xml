<?xml version="1.0"?>
<ruleset name="WWI Blogcard">
	<description>PHP_CodeSniffer configuration for WWI Blogcard plugin.</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>
	<exclude-pattern>/tests/*</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/>
	<arg name="basepath" value="."/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<!-- Rules: WordPress Extra -->
	<rule ref="WordPress-Extra"/>

	<!-- Rules: WordPress Docs -->
	<rule ref="WordPress-Docs"/>

	<!-- Configure text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="wwi-blogcard"/>
			</property>
		</properties>
	</rule>

	<!-- Configure minimum supported WordPress version -->
	<config name="minimum_wp_version" value="6.0"/>

	<!-- Configure minimum supported PHP version -->
	<config name="testVersion" value="7.4-"/>
</ruleset>
